# Core settings
APP_NAME=Telegram Market Mini App
API_PREFIX=/api
# Optional extra prefixes exposed alongside API_PREFIX (comma separated)
ADDITIONAL_API_PREFIXES=
# Optional public base paths prepended to every API prefix (comma separated)
PUBLIC_API_ROOTS=
BACKEND_CORS_ORIGINS=*
DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/telegram_mini_app
DB_STARTUP_RETRIES=10
DB_STARTUP_RETRY_DELAY=2.0
ADMIN_TELEGRAM_IDS=123456789
ADMIN_PHONE_NUMBERS=998001112233
MEDIA_ROOT=app/static/uploads
MEDIA_URL=/static/uploads
MEDIA_BASE_URL=
MAX_UPLOAD_SIZE_MB=10

# Bot
BOT_TOKEN=replace-with-your-bot-token
WEBAPP_URL=https://your-domain.com

# Frontend build variables
VITE_BACKEND_URL=http://backend:8000
VITE_BACKEND_API_PREFIX=/api
VITE_ADMIN_TELEGRAM_IDS=123456789
VITE_ADMIN_PHONE_NUMBERS=998001112233
VITE_FAKE_TELEGRAM_ID=999999
VITE_MEDIA_BASE_URL=
VITE_MAX_UPLOAD_SIZE_MB=10
